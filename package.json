{
  "name": "story-app",
  "version": "1.0.0",
  "description": "Story App is a simple app that allows you to create stories.",
  "private": true,
  "scripts": {
    "dev": "webpack serve --config webpack.dev.js",
    "build": "pnpm run format && webpack --config webpack.prod.js",
    "lint": "eslint src",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier src --check",
    "prettier:fix": "prettier src --write",
    "format": "pnpm run prettier:fix && pnpm run lint:fix",
    "test": "echo \"Warning: no test specified\" && exit 0"
  },
  "keywords": [
    "webpack",
    "sass",
    "babel",
    "bootstrap"
  ],
  "author": "Imamuzzaki Abu Salam <imamuzzaki@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.21.8",
    "@babel/preset-env": "7.21.5",
    "@lit/localize-tools": "^0.6.9",
    "autoprefixer": "10.4.14",
    "babel-loader": "9.1.2",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.4",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^44.2.7",
    "html-webpack-plugin": "5.5.1",
    "postcss-loader": "7.3.0",
    "prettier": "2.8.8",
    "sass": "1.62.1",
    "sass-loader": "13.2.2",
    "style-loader": "3.3.3",
    "webpack": "5.83.1",
    "webpack-cli": "5.1.1",
    "webpack-dev-server": "4.15.0",
    "webpack-merge": "5.8.0"
  },
  "dependencies": {
    "@lit/localize": "^0.11.4",
    "@popperjs/core": "2.11.7",
    "axios": "^1.4.0",
    "bootstrap": "5.2.3",
    "bootstrap-icons": "1.10.5",
    "firebase": "^9.22.1",
    "lit": "^2.7.4"
  },
  "repository": {
    "url": "git+https://github.com/ImBIOS/story-app.git"
  }
}
